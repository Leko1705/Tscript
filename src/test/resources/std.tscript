module std;

namespace math {

    function e() {
        return 2.718281828459045;
    }

    function pi(){
        return 3.141592653589793;
    }

    function abs(x){
        if x > 0 then return x;
        else return -x;
    }

    function max(a, b){
        if a > b then return a;
        else return b;
    }

    function min(a, b){
        if a < b then return a;
        else return b;
    }

    function sign(x){
        if x > 0 then return 1;
        else if x < 0 then return -1;
        else return 0;
    }
}

